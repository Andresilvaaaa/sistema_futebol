# =============================================================================
# CONFIGURAÇÕES DE AMBIENTE - SISTEMA DE FUTEBOL
# =============================================================================
# IMPORTANTE: Este arquivo contém informações sensíveis. 
# Nunca commite este arquivo no Git!

# =============================================================================
# FLASK CORE
# =============================================================================
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=sua-chave-super-secreta-para-flask-sessions-2024

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET_KEY=sua-chave-jwt-super-secreta-diferente-da-secret-key-2024

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=sqlite:///futebol_dev.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# =============================================================================
# CORS - FRONTEND INTEGRATION
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001

# =============================================================================
# UPLOAD & FILE HANDLING
# =============================================================================
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=DEBUG

# =============================================================================
# DOMÍNIO ESPECÍFICO - FUTEBOL
# =============================================================================
MAX_PLAYERS_PER_TEAM=25
MIN_PLAYERS_PER_TEAM=11
SEASON_START_MONTH=8
SEASON_END_MONTH=5

# =============================================================================
# DESENVOLVIMENTO - CONFIGURAÇÕES EXTRAS
# =============================================================================
# Porta do servidor (opcional, padrão é 5000)
PORT=5000

