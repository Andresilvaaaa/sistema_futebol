# Flask Environment Configuration
# Este arquivo é carregado automaticamente pelo Flask quando você usa 'flask run'
# Diferente do .env, este arquivo pode ser commitado no repositório

# Configurações básicas do Flask
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=1

# Configurações do servidor de desenvolvimento
FLASK_RUN_HOST=127.0.0.1
FLASK_RUN_PORT=5000

# Configurações de reload automático
FLASK_RUN_RELOAD=1

# Configurações de threading (para desenvolvimento)
FLASK_RUN_WITH_THREADS=1

# Configurações de logging
FLASK_SKIP_DOTENV=0